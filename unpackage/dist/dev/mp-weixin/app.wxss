/* 常用布局 */
.container {
  padding: 20rpx;
  background-color: #fff;
}
.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.flex-col {
  display: flex;
  flex-direction: column;
}
.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}
.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
/* 文本样式 */
.text-primary {
  color: #2c3e50;
}
.text-secondary {
  color: #3498db;
}
.text-muted {
  color: #7f8c8d;
  font-size: 24rpx;
}
.text-center {
  text-align: center;
}
.text-bold {
  font-weight: bold;
}
/* 按钮样式 */
.btn-primary {
  background-color: #2c3e50;
  color: #fff;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  border: none;
  font-size: 32rpx;
}
.btn-secondary {
  background-color: #3498db;
  color: #fff;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  border: none;
  font-size: 32rpx;
}
/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}
